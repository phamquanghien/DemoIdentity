@using DemoIdentity.ViewModel;
@model CreateUserViewModel

<h1>Create new User</h1>
<hr>
<div class="row card form-center max-width-40">
    <div class="col-md-12">
        <form method="POST" asp-action="Create" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control mt-3">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="PassWord"></label>
                <input asp-for="PassWord" class="form-control mt-3">
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ConfirmPassWord"></label>
                <input asp-for="ConfirmPassWord" class="form-control mt-3">
                <span asp-validation-for="ConfirmPassWord" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" class="btn btn-success" value="Create new user">
            </div>
        </form>
    </div>
</div>