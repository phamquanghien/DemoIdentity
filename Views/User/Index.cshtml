@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
<h1>User</h1>
<hr>
@if (Model.Any())
{
    <p>
        <a class="btn btn-primary mb-3" asp-action="Create">Add new User</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.UserName)</th>
                <th>@Html.DisplayNameFor(m => m.NormalizedUserName)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.NormalizedEmail)</th>
                <th>@Html.DisplayNameFor(m => m.EmailConfirmed)</th>
                <th>@Html.DisplayNameFor(m => m.PasswordHash)</th>
                <th>@Html.DisplayNameFor(m => m.SecurityStamp)</th>
                <th>@Html.DisplayNameFor(m => m.ConcurrencyStamp)</th>
                <th>@Html.DisplayNameFor(m => m.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(m => m.PhoneNumberConfirmed)</th>
                <th>@Html.DisplayNameFor(m => m.TwoFactorEnabled)</th>
                <th>@Html.DisplayNameFor(m => m.LockoutEnd)</th>
                <th>@Html.DisplayNameFor(m => m.LockoutEnabled)</th>
                <th>@Html.DisplayNameFor(m => m.AccessFailedCount)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(m => item.Id)</th>
                    <td>@Html.DisplayFor(m => item.UserName)</td>
                    <td>@Html.DisplayFor(m => item.NormalizedUserName)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>
                    <td>@Html.DisplayFor(m => item.NormalizedEmail)</td>
                    <td>@Html.DisplayFor(m => item.EmailConfirmed)</td>
                    <td>@Html.DisplayFor(m => item.PasswordHash)</td>
                    <td>@Html.DisplayFor(m => item.SecurityStamp)</td>
                    <td>@Html.DisplayFor(m => item.ConcurrencyStamp)</td>
                    <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(m => item.PhoneNumberConfirmed)</td>
                    <td>@Html.DisplayFor(m => item.TwoFactorEnabled)</td>
                    <td>@Html.DisplayFor(m => item.LockoutEnd)</td>
                    <td>@Html.DisplayFor(m => item.LockoutEnabled)</td>
                    <td>@Html.DisplayFor(m => item.AccessFailedCount)</td>
                    <td><a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="btn btn-success">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <div class="card">
        <div class="card-header">
            No User created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a User.
            </h5>
            <a asp-controller = "USer" asp-action="Create" class="btn btn-primary">Create User</a>
        </div>
    </div>
}