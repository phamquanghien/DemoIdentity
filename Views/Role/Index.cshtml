@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<h1>Roles</h1>
<hr>
<a class="btn btn-primary mb-3" asp-action="Create">Add new Role</a>
<br />
@if (Model.Any()) {
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                RoleID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
            </div>
        </div>
    }
}
else{
    <div class="card">
        <div class="card-header">
            No Role created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role.
            </h5>
            <a asp-controller = "Role" asp-action="Create" class="btn btn-primary">Create Role</a>
        </div>
    </div>
}